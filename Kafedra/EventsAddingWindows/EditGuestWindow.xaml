<Window x:Class="Kafedra.EventsAddingWindows.EditGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kafedra.EventsAddingWindows"
        mc:Ignorable="d"
        Title="EditGuestWindow" Height="350" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="First Name:" Grid.Row="0" Margin="10"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="1" Margin="10" />

        <Label Content="Last Name:" Grid.Row="2" Margin="10"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="3" Margin="10" />

        <Label Content="Patronymic:" Grid.Row="4" Margin="10"/>
        <TextBox x:Name="PatronymicTextBox" Grid.Row="5" Margin="10" />

        <Button Content="Save" Click="SaveButton_Click" Grid.Row="5" HorizontalAlignment="Center" Margin="0,55,0,-35" Width="155"/>
    </Grid>
</Window>
